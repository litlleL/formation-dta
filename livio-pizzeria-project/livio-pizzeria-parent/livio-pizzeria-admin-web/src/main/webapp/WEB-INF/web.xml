<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
   <!-- Filter -->
  
  <filter>
  	<filter-name>AuthFilter</filter-name>
  	<display-name>AuthFilter</display-name>
  	<description></description>
  	<filter-class>fr.pizzeria.admin.web.filter.AuthFilter</filter-class>
  </filter>
  
  <filter-mapping>
  	<filter-name>AuthFilter</filter-name>
  	<url-pattern>/pizzas/*</url-pattern>
  </filter-mapping>
  
  <!-- Mapping -->
  <servlet>
  	<servlet-name>PizzeriaServletWebApi</servlet-name>
  	<display-name>pizzas</display-name>
  	<servlet-class>fr.pizzeria.admin.web.PizzeriaServletWebApi</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>ListerPizzaController</servlet-name>
  	<display-name>Lister</display-name>
  	<description></description>
  	<servlet-class>fr.pizzeria.admin.web.ListerPizzaController</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>EditerPizzaController</servlet-name>
  	<display-name>Editer</display-name>
  	<description></description>
  	<servlet-class>fr.pizzeria.admin.web.EditerPizzaController</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>AjouterPizzaController</servlet-name>
  	<display-name>Ajouter</display-name>
  	<description></description>
  	<servlet-class>fr.pizzeria.admin.web.AjouterPizzaController</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>SupprimerPizzaController</servlet-name>
  	<display-name>Supprimer</display-name>
  	<description></description>
  	<servlet-class>fr.pizzeria.admin.web.SupprimerPizzaController</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>Login</servlet-name>
  	<display-name>Login</display-name>
  	<description></description>
  	<servlet-class>fr.pizzeria.admin.web.Login</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>Logout</servlet-name>
  	<display-name>Logout</display-name>
  	<description></description>
  	<servlet-class>fr.pizzeria.admin.web.Logout</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>PizzeriaServletWebApi</servlet-name>
  	<url-pattern>/api/servlet/pizzas</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>ListerPizzaController</servlet-name>
  	<url-pattern>/pizzas/list</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>EditerPizzaController</servlet-name>
  	<url-pattern>/pizzas/edit</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>AjouterPizzaController</servlet-name>
  	<url-pattern>/pizzas/new</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>SupprimerPizzaController</servlet-name>
  	<url-pattern>/pizzas/delete</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>Login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>Logout</servlet-name>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  
 
  
</web-app>
